WindowManager:
	VM_Home:
	VM_Election_List:
	VM_Election_Det:
	VM_Vote_Confirm:

<VM_Home>:
	name: "election_home"
	pin: pin
	msg: msg
	email: email
	GridLayout:
		cols: 1
		size: root.width * 0.8, root.height * 0.8
		Label:
			text: ""

		Label:			
			text: "Email:"
			halign: 'center'
			valign: 'bottom'
			font_size: 50
			size: root.width, root.height / 12
			size_hint: None, None

		GridLayout:
			cols: 3
			
			Label:
				text: ""
				size: root.width / 4, root.height / 12
				size_hint: None, None

			TextInput:
				halign: 'center'
				valign: 'middle'
				id: email
				size: root.width / 2, root.height / 14
				size_hint: None, None
				font_size: self.height / 1.5

			Label:
				text: ""
				size: root.width / 4, root.height / 12
				size_hint: None, None

		Label:			
			text: "Password:"
			font_size: 50
			halign: 'center'
			valign: 'bottom'
			size: root.width, root.height / 12
			size_hint: None, None

		GridLayout:
			cols: 3
			
			Label:
				text: ""
				size: root.width / 4, root.height / 12
				size_hint: None, None

			TextInput:
				halign: 'center'
				valign: 'middle'
				id: pin
				size: root.width / 2, root.height / 14
				size_hint: None, None
				font_size: self.height / 1.5

			Label:
				text: ""
				size: root.width / 4, root.height / 12
				size_hint: None, None
			
		GridLayout:
			cols: 4

			Button:
				text: "Exit"
				valign: 'top'
				on_release:
					root.exit_btn()
								
				size: root.width / 4, root.height / 12
				size_hint: None, None

			Label:
				text: ""
				id: msg
				size: root.width / 4, root.height / 10
				size_hint: None, None	

			Label:
				text: ""
				size: root.width / 4, root.height / 10
				size_hint: None, None

			Button:
				text: "Submit"
				valign: 'top'
				on_release:
					root.process_pin()
								
				size: root.width / 4, root.height / 12
				size_hint: None, None
	
<VM_Election_List>:
	name: "election_list"
	BoxLayout:
		orientation: 'vertical'
		ScrollView:
			size_hint: 1,root.height
			GridLayout:
				height: self.minimum_height
				size_hint_y: None
				id: grid
				cols: 1

<VM_Election_Det>:
	name: "election_det"
	BoxLayout:
		orientation: 'vertical'
		ScrollView:
			size_hint: 1,root.height
			GridLayout:
				height: self.minimum_height
				size_hint_y: None
				id: grid
				cols: 1

<VM_Vote_Confirm>:
	name: "vote_confirm"
	BoxLayout:
		orientation: 'vertical'
		ScrollView:
			size_hint: 1,root.height
			GridLayout:
				height: self.minimum_height
				size_hint_y: None
				id: grid
				cols: 1